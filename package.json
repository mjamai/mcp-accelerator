{
  "name": "mcp-accelerator-monorepo",
  "version": "1.0.0",
  "description": "Framework moderne et modulaire pour crÃ©er des serveurs MCP performants avec support multi-transport",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build -w @mcp-accelerator/core",
    "build:stdio": "npm run build -w @mcp-accelerator/transport-stdio",
    "build:http": "npm run build -w @mcp-accelerator/transport-http",
    "build:websocket": "npm run build -w @mcp-accelerator/transport-websocket",
    "build:sse": "npm run build -w @mcp-accelerator/transport-sse",
    "build:auth": "npm run build -w @mcp-accelerator/middleware-auth",
    "build:ratelimit": "npm run build -w @mcp-accelerator/middleware-ratelimit",
    "build:cors": "npm run build -w @mcp-accelerator/middleware-cors",
    "build:observability": "npm run build -w @mcp-accelerator/middleware-observability",
    "build:resilience": "npm run build -w @mcp-accelerator/middleware-resilience",
    "dev": "npm run dev --workspaces --if-present",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "changelog": "node scripts/release/generate-changelog.mjs",
    "release:bump": "node scripts/release/bump-version.mjs",
    "release:prepare": "npm run test:ci && npm run security:audit && npm run security:licenses && npm run changelog",
    "release": "npm run release:prepare && npm run release:bump",
    "security:audit": "npm audit --production",
    "security:snyk": "npx --yes snyk test || true",
    "security:licenses": "node scripts/release/check-licenses.mjs",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules coverage",
    "lint": "eslint packages/**/src/**/*.ts",
    "lint:fix": "eslint packages/**/src/**/*.ts --fix",
    "docs": "typedoc --out docs packages/core/src/index.ts",
    "e2e:reference": "npm run build:core && npm run build:websocket && node scripts/e2e-websocket-reference.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "server",
    "framework",
    "typescript",
    "multi-transport",
    "websocket",
    "sse",
    "stdio",
    "monorepo"
  ],
  "author": "Mohamed JAMAI",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "typedoc": "^0.25.6",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0"
  }
}
